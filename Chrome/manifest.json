{
    "manifest_version": 2,
  
    "name": "Open in Text Editor",
    "description": "Opens a text file from OneDrive inside OneDrive Text Editor.",
    "version": "1.0",
  
    "browser_action": {
      "default_icon": "icon/edit16.png"
    },
    "background":{
        "scripts": ["scripts/background.js"]
    },
    "permissions": [
      "activeTab",
      "tabs",
      "https://onedrive.live.com/*"
    ],
    "icons": { 
        "16": "icon/edit16.png",
        "48": "icon/edit48.png",
       "128": "icon/edit128.png" }
  }